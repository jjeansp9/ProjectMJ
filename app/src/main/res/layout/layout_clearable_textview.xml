<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_edittext"
    android:id="@+id/root"
    >
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="@dimen/layout_margin_xxsmall"
        android:textSize="@dimen/font_size"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/black"
        android:drawableRight="@drawable/ic_vector_school"
        android:paddingRight="@dimen/layout_margin_xxsmall"
        android:stateListAnimator="@xml/animate_button_push"
        />
    <View android:id="@+id/view_close"
        android:layout_height="24dp"
        android:layout_width="24dp"
        android:background="@drawable/ic_vector_close"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/layout_margin_xxsmall"
        android:visibility="gone"
        android:stateListAnimator="@xml/animate_button_push"/>
</androidx.appcompat.widget.LinearLayoutCompat>