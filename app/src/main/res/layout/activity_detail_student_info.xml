<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.menu.student.DetailStudentInfoActivity"
    android:background="@color/bg_gray">

    <kr.jeet.edu.manager.view.CustomAppbarLayout
        android:id="@+id/customAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:scrollbars="none"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_consultation_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:background="@drawable/bg_menu_student_info_layout"
                android:paddingVertical="@dimen/layout_margin_xsmall"
                android:layout_marginHorizontal="@dimen/layout_margin"
                android:alpha="0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_stu_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingTop="@dimen/layout_margin_xsmall">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_student_info_left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.40"/>
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_student_info_right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.60"/>

                    <ImageView
                        android:id="@+id/img_stu_info_profile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/guideline_student_info_left"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        android:src="@drawable/img_profile_man"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/img_stu_info_profile"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/img_stu_info_profile"
                        app:layout_constraintBottom_toBottomOf="@id/img_stu_info_profile"
                        android:paddingStart="@dimen/layout_margin_xsmall">
                        <TextView
                            android:id="@+id/tv_stu_info_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:hint="@string/name"
                            android:textColor="@color/font_color_default"
                            android:textStyle="bold"
                            android:textSize="@dimen/font_size_xlarge" />

                        <TextView
                            android:id="@+id/tv_stu_info_dept_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_stu_info_name"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginEnd="@dimen/layout_margin_xxxsmall"
                            android:layout_marginTop="2dp"
                            android:hint=""
                            android:textSize="@dimen/font_size_large"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <TextView
                        android:id="@+id/tv_stu_info_campus_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/img_stu_info_profile"
                        app:layout_constraintEnd_toEndOf="@id/img_stu_info_profile"
                        android:layout_marginTop="@dimen/layout_margin_xxsmall"
                        android:textColor="@color/font_color_999"
                        android:text="@string/menu_stu_info_campus"
                        android:textScaleX="0.92"
                        android:textSize="@dimen/font_size"/>

                    <TextView
                        android:id="@+id/tv_stu_info_campus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/img_stu_info_profile"
                        app:layout_constraintStart_toEndOf="@id/tv_stu_info_campus_item"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/layout_margin_xxsmall"
                        android:layout_marginStart="@dimen/layout_margin_xxsmall"
                        android:hint="@string/menu_stu_info_empty"
                        android:textColor="@color/font_color_default"
                        android:textSize="@dimen/font_size"/>

                    <TextView
                        android:id="@+id/tv_stu_info_birthday_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_stu_info_campus_item"
                        app:layout_constraintEnd_toEndOf="@id/img_stu_info_profile"
                        android:layout_marginTop="@dimen/layout_margin_xxxxsmall"
                        android:textColor="@color/font_color_999"
                        android:text="@string/birthday_short"
                        android:textScaleX="0.92"
                        android:textSize="@dimen/font_size"/>

                    <TextView
                        android:id="@+id/tv_stu_info_stu_birthday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_stu_info_campus_item"
                        app:layout_constraintStart_toEndOf="@id/tv_stu_info_birthday_item"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/layout_margin_xxxxsmall"
                        android:layout_marginStart="@dimen/layout_margin_xxsmall"
                        android:hint="@string/menu_stu_info_empty"
                        android:textColor="@color/font_color_default"
                        android:textSize="@dimen/font_size"/>
                    <TextView
                        android:id="@+id/tv_stu_info_stu_phone_num_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_stu_info_birthday_item"
                        app:layout_constraintEnd_toEndOf="@id/img_stu_info_profile"
                        android:layout_marginTop="@dimen/layout_margin_xxxxsmall"
                        android:textColor="@color/font_color_999"
                        android:text="@string/menu_stu_info_stu_phone_num"
                        android:textScaleX="0.92"
                        android:textSize="@dimen/font_size"/>

                    <TextView
                        android:id="@+id/tv_stu_info_stu_phone_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_stu_info_birthday_item"
                        app:layout_constraintStart_toEndOf="@id/tv_stu_info_stu_phone_num_item"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/layout_margin_xxxxsmall"
                        android:layout_marginStart="@dimen/layout_margin_xxsmall"
                        android:hint="@string/menu_stu_info_empty"
                        android:textColor="@color/font_color_default"
                        android:textSize="@dimen/font_size"/>

                    <TextView
                        android:id="@+id/tv_stu_info_parent_phone_num_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_stu_info_stu_phone_num_item"
                        app:layout_constraintEnd_toEndOf="@id/img_stu_info_profile"
                        android:layout_marginTop="@dimen/layout_margin_xxxxsmall"
                        android:textColor="@color/font_color_999"
                        android:text="부모님 연락처"
                        android:textScaleX="0.92"
                        android:textSize="@dimen/font_size"/>

                    <TextView
                        android:id="@+id/tv_stu_info_parent_phone_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_stu_info_stu_phone_num_item"
                        app:layout_constraintStart_toEndOf="@id/tv_stu_info_parent_phone_num_item"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/layout_margin_xxxxsmall"
                        android:layout_marginStart="@dimen/layout_margin_xxsmall"
                        android:hint="@string/menu_stu_info_empty"
                        android:textColor="@color/font_color_default"
                        android:textSize="@dimen/font_size"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_push_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layout_consultation_request"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:paddingHorizontal="@dimen/layout_margin_small"
                android:paddingBottom="@dimen/layout_margin_xxsmall"
                android:background="@drawable/bg_menu_student_info_layout"
                android:layout_marginHorizontal="@dimen/layout_margin"
                android:alpha="0">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_h50dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="50dp"
                    tools:ignore="DuplicateIds"/>
                <TextView
                    android:id="@+id/tv_set_notice_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/line_notice_state"
                    android:text="@string/settings_notice_reception_state"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_large"/>


                <View
                    android:id="@+id/line_notice_state"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/guide_h50dp"
                    android:background="@color/line_set"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_push_status_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/line_notice_state"
                    android:layout_marginTop="@dimen/layout_margin_xsmall"
                    android:paddingHorizontal="@dimen/layout_margin_xsmall"
                    android:paddingVertical="@dimen/layout_margin_xxxsmall"
                    android:background="@drawable/bg_lightgray_panel">
                    <TextView
                        android:id="@+id/tv_student"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_student_install"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/layout_push_status_student_items"
                        android:layout_marginVertical="@dimen/layout_margin_xxxsmall"
                        android:text="@string/student"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_size_large"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/font_color_default"/>

                    <TextView
                        android:id="@+id/tv_student_install"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/layout_push_status_student_items"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginVertical="@dimen/layout_margin_xxxsmall"
                        android:text="@string/value_uninstall"
                        android:textSize="@dimen/font_size"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/font_color_red"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_push_status_student_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_student"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <TextView
                            android:id="@+id/tv_set_announcement_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/sw_set_announcement_state"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/sw_set_announcement_state"
                            android:text="@string/main_menu_announcement"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/font_color_default"/>

                        <TextView
                            android:id="@+id/sw_set_announcement_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/sw_set_information_session_state"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="@dimen/layout_margin_xxxxsmall"
                            android:hint="@string/value_off"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:textColor="@color/font_color_default"/>

                        <TextView
                            android:id="@+id/tv_set_briefing_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/sw_set_information_session_state"
                            app:layout_constraintTop_toTopOf="@id/sw_set_information_session_state"
                            app:layout_constraintBottom_toBottomOf="@id/sw_set_information_session_state"
                            android:text="@string/main_menu_briefing_reserve"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/font_color_default"/>

                        <TextView
                            android:id="@+id/sw_set_information_session_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/sw_set_announcement_state"
                            app:layout_constraintBottom_toTopOf="@id/sw_set_attendance_state"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="@dimen/layout_margin_xxxxsmall"
                            android:hint="@string/value_off"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:textColor="@color/font_color_default"/>

                        <TextView
                            android:id="@+id/tv_set_attendance_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/sw_set_attendance_state"
                            app:layout_constraintTop_toTopOf="@id/sw_set_attendance_state"
                            app:layout_constraintBottom_toBottomOf="@id/sw_set_attendance_state"
                            android:text="@string/main_attendance"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/font_color_default"/>

                        <TextView
                            android:id="@+id/sw_set_attendance_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/sw_set_information_session_state"
                            app:layout_constraintBottom_toTopOf="@id/sw_set_system_state"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="@dimen/layout_margin_xxxxsmall"
                            android:hint="@string/value_off"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:textColor="@color/font_color_default"/>
                        <TextView
                            android:id="@+id/tv_set_system_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/sw_set_system_state"
                            app:layout_constraintTop_toTopOf="@id/sw_set_system_state"
                            app:layout_constraintBottom_toBottomOf="@id/sw_set_system_state"
                            android:text="@string/settings_notice_system"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/font_color_default"/>

                        <TextView
                            android:id="@+id/sw_set_system_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/sw_set_attendance_state"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginVertical="@dimen/layout_margin_xxxxsmall"
                            android:hint="@string/value_off"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:textColor="@color/font_color_default"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_push_status_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/layout_push_status_student"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginVertical="@dimen/layout_margin_xsmall"
                    android:paddingHorizontal="@dimen/layout_margin_xsmall"
                    android:paddingVertical="@dimen/layout_margin_xxxsmall"
                    android:background="@drawable/bg_lightgray_panel">
                    <TextView
                        android:id="@+id/tv_parent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_parent_install"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/layout_push_status_parent_items"
                        android:layout_marginVertical="@dimen/layout_margin_xxxsmall"
                        android:text="@string/parents"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_size_large"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/font_color_default"/>

                    <TextView
                        android:id="@+id/tv_parent_install"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/layout_push_status_parent_items"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginVertical="@dimen/layout_margin_xxxsmall"
                        android:text="@string/value_uninstall"
                        android:textSize="@dimen/font_size"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/font_color_red"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_push_status_parent_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <TextView
                            android:id="@+id/tv_parent_set_announcement_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/sw_parent_set_announcement_state"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/sw_parent_set_announcement_state"
                            android:text="@string/main_menu_announcement"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/font_color_default"/>

                        <TextView
                            android:id="@+id/sw_parent_set_announcement_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/sw_parent_set_information_session_state"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="@dimen/layout_margin_xxxxsmall"
                            android:hint="@string/value_off"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:textColor="@color/font_color_default"/>

                        <TextView
                            android:id="@+id/tv_parent_set_briefing_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/sw_parent_set_information_session_state"
                            app:layout_constraintTop_toTopOf="@id/sw_parent_set_information_session_state"
                            app:layout_constraintBottom_toBottomOf="@id/sw_parent_set_information_session_state"
                            android:text="@string/main_menu_briefing_reserve"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/font_color_default"/>

                        <TextView
                            android:id="@+id/sw_parent_set_information_session_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/sw_parent_set_announcement_state"
                            app:layout_constraintBottom_toTopOf="@id/sw_parent_set_attendance_state"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="@dimen/layout_margin_xxxxsmall"
                            android:hint="@string/value_off"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:textColor="@color/font_color_default"/>

                        <TextView
                            android:id="@+id/tv_parent_set_attendance_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/sw_parent_set_attendance_state"
                            app:layout_constraintTop_toTopOf="@id/sw_parent_set_attendance_state"
                            app:layout_constraintBottom_toBottomOf="@id/sw_parent_set_attendance_state"
                            android:text="@string/main_attendance"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/font_color_default"/>

                        <TextView
                            android:id="@+id/sw_parent_set_attendance_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/sw_parent_set_information_session_state"
                            app:layout_constraintBottom_toTopOf="@id/sw_parent_set_system_state"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="@dimen/layout_margin_xxxxsmall"
                            android:hint="@string/value_off"
                            android:textSize="@dimen/font_size"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:textColor="@color/font_color_default"/>
                        <TextView
                            android:id="@+id/tv_parent_set_system_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
