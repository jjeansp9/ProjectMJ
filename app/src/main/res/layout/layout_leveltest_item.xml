<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="8dp"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_test_reserve_first"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/tv_test_reserve_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:hint="학생이름"
        android:singleLine="true"
        android:textColor="@color/font_color_default"
        android:textSize="@dimen/font_size_large"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/img_test_reserve_see_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_test_reserve_campus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_test_reserve_see_more"
        app:layout_constraintTop_toBottomOf="@id/tv_test_reserve_name"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:hint="(캠퍼스 정보 없음)"
        android:maxLines="1"
        android:textColor="@color/font_color_default"
        android:textSize="@dimen/font_size_small" />

    <TextView
        android:id="@+id/tv_test_register_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_test_reserve_see_more"
        app:layout_constraintTop_toBottomOf="@id/tv_test_reserve_campus"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:hint="0000-00-00"
        android:textSize="@dimen/font_size_small"
        android:textColor="@color/font_color_999"
        android:maxLines="1"
        android:ellipsize="end"/>
