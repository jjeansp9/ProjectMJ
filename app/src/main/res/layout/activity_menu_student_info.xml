<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.menu.student.MenuStudentInfoActivity"
    android:animateLayoutChanges="true">

    <kr.jeet.edu.manager.view.CustomAppbarLayout
        android:id="@+id/customAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_select_calendar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/customAppbar"
        app:layout_constraintBottom_toTopOf="@id/layout_control_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:animateLayoutChanges="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_inner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/layout_margin_small"
            android:layout_marginTop="@dimen/layout_margin_xsmall"
            android:background="@drawable/bg_white_panel"
            >
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_calendar_h50"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_calendar_previous"
                android:layout_height="@dimen/calendar_arrow_size"
                android:layout_width="@dimen/calendar_arrow_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/guideline_calendar_h50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintHorizontal_chainStyle="spread"
                android:background="@drawable/ic_vector_arrow_left"
                android:stateListAnimator="@xml/animate_button_push"/>
            <TextView
                android:id="@+id/tv_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/guideline_calendar_h50"
                app:layout_constraintStart_toEndOf="@id/btn_calendar_previous"
                app:layout_constraintEnd_toStartOf="@id/btn_calendar_next"
                android:layout_marginHorizontal="@dimen/layout_margin_xxxsmall"
                android:drawableEnd="@drawable/ic_vector_calendar"
                android:drawablePadding="@dimen/layout_margin_small"
                android:gravity="center"
                android:textColor="@color/black"
                android:hint="@string/title_anonymous"
                android:textStyle="bold"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:stateListAnimator="@xml/animate_button_push"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_calendar_next"
                android:layout_height="@dimen/calendar_arrow_size"
                android:layout_width="@dimen/calendar_arrow_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/guideline_calendar_h50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.85"
                android:background="@drawable/ic_vector_arrow_right"
                android:backgroundTint="@color/blackgray"
                android:stateListAnimator="@xml/animate_button_push"/>

            <TextView
                android:id="@+id/tv_department"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/main_teacher_department_not_found"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/spinner_class"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toBottomOf="@id/guideline_calendar_h50"
                app:layout_constraintBottom_toTopOf="@id/tv_total_count"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginStart="@dimen/layout_margin_small"
                android:textSize="@dimen/font_size"
                android:textColor="@color/font_color_default"
                />
                <View
                    android:id="@+id/view_divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/guideline_calendar_h50"
                    android:layout_marginHorizontal="@dimen/layout_margin_small"
                    android:background="@color/gray"
                    />
            <TextView
                android:id="@+id/tv_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_teacher_department_not_found"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline_calendar_h50"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/layout_margin_small"
                android:textSize="@dimen/font_size"
                android:textColor="@color/font_color_default"
                />
            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintStart_toEndOf="@id/tv_department"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline_calendar_h50"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="@dimen/layout_margin_small"
                android:layout_marginVertical="@dimen/layout_margin_xxsmall"
                android:paddingHorizontal="@dimen/layout_margin_small"
                android:paddingVertical="@dimen/layout_margin_xxsmall"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="@string/hint_select_class"
                app:spinner_item_height="@dimen/spinner_item_height"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/darkgray"
                app:spinner_selected_item_background="@color/color_spinner_selected_item"
                app:spinner_divider_color="@color/line"
                app:spinner_divider_show="true"
                app:spinner_divider_size="@dimen/spinner_divider_height"
                app:spinner_popup_background="@drawable/selector_spinner_item"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_elevation="2dp"
                android:background="@drawable/selector_spinner_normal"/>
            <TextView
                android:id="@+id/tv_total_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/spinner_class"
                app:layout_constraintTop_toBottomOf="@id/tv_department"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="@dimen/layout_margin_small"
                android:hint="총 0 명"
                android:text=""
                android:textColor="@color/font_color_999"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/font_size_small"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0.5dp"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            android:background="@color/line"/>-->
    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--        android:id="@+id/layout_spinner"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintTop_toBottomOf="@id/layout_select_calendar"-->
<!--        app:layout_constraintBottom_toTopOf="@id/layout_control_all"-->
<!--        android:background="@color/white">-->
<!--        -->

<!--    </androidx.constraintlayout.widget.ConstraintLayout>-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_control_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/layout_margin_small"
        app:layout_constraintTop_toBottomOf="@id/layout_select_calendar"
        app:layout_constraintBottom_toTopOf="@id/refresh_layout"
        android:background="@color/bg_gray"
        >
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_ve100"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_end="100dp" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/layout_total_checkbox_width" />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:checked="false"
            android:clickable="false"
            />
        <TextView
            android:id="@+id/tv_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_title"
            app:layout_constraintHorizontal_bias="0"
            android:paddingHorizontal="@dimen/layout_margin_xxxsmall"
            android:textColor="@color/font_color_default"
            android:text="@string/select_all"
            android:textStyle="normal"
            android:textSize="@dimen/font_size_small"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_select_all"
            app:layout_constraintEnd_toStartOf="@id/guideline_ve100"
            app:layout_constraintHorizontal_bias="0.1"
            android:paddingHorizontal="@dimen/layout_margin_xxxsmall"
            android:layout_marginEnd="@dimen/layout_margin_xxsmall"
            android:textColor="@color/font_color_999"
            android:hint="0 명 선택"
            android:textStyle="normal"
            android:textSize="@dimen/font_size_small"
            android:maxLines="1"
            android:ellipsize="end"/>
        <com.skydoves.powerspinner.PowerSpinnerView
            android:id="@+id/spinner_attendance_status_all"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_ve100"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/layout_margin_xxsmall"
            android:paddingVertical="@dimen/layout_margin_xxsmall"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_small"
            android:maxLines="1"
            android:ellipsize="end"
            android:hint="@string/select_multiple"
            android:textColorHint="@color/black"
            app:spinner_item_height="@dimen/spinner_item_height_small"
            app:spinner_arrow_gravity="end"
            app:spinner_arrow_tint="@color/darkgray"
            app:spinner_selected_item_background="@color/color_spinner_selected_item"
            app:spinner_divider_color="@color/line"
            app:spinner_divider_show="true"
            app:spinner_divider_size="@dimen/spinner_divider_height"
            app:spinner_popup_background="@drawable/selector_spinner_item"
            app:spinner_popup_animation="dropdown"
            app:spinner_popup_elevation="2dp"
            android:background="@drawable/selector_spinner_normal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_control_all"
        app:layout_constraintBottom_toTopOf="@id/btn_attendance">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_student_attendance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/layout_attendance_info"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:overScrollMode="always"
            android:orientation="vertical"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <TextView
        android:id="@+id/tv_empty_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_control_all"
        app:layout_constraintBottom_toTopOf="@id/btn_attendance"
        android:paddingHorizontal="@dimen/layout_margin_small"
        android:gravity="center"
        android:text="@string/msg_empty_student"
        android:textSize="@dimen/font_size_xlarge"
        android:textColor="@color/font_color_999"
        android:lineSpacingMultiplier="@dimen/empty_textview_multiplier"
        android:elevation="@dimen/layout_margin_xxxsmall"/>
    <android.widget.Button
        android:id="@+id/btn_attendance"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_button_layout_height"
        android:background="@drawable/selector_bt_ubderbox"
        android:text="@string/check_attendance"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/refresh_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="spread"
        android:stateListAnimator="@xml/animate_button_pull"
        />

</androidx.constraintlayout.widget.ConstraintLayout>