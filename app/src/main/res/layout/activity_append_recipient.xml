<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.AppendRecipientActivity">

    <kr.jeet.edu.manager.view.CustomAppbarLayout
        android:id="@+id/customAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@color/white"
        android:animateLayoutChanges="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/refresh_layout"
            android:paddingHorizontal="@dimen/layout_margin_small"
            android:paddingVertical="@dimen/layout_margin_xsmall"
            android:background="@color/bg_gray"
            android:animateLayoutChanges="true">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_v80"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.80"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_v60"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.60"/>
            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_campus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_content_date"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/spinner_dept"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintVertical_bias="0"
                android:hint="@string/hint_select_campus"
                android:paddingHorizontal="@dimen/layout_margin_xxsmall"
                android:paddingVertical="@dimen/layout_margin_xxsmall"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:ellipsize="end"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/darkgray"
                app:spinner_selected_item_background="@color/color_spinner_selected_item"
                app:spinner_divider_color="@color/line"
                app:spinner_divider_show="true"
                app:spinner_divider_size="@dimen/spinner_divider_height"
                app:spinner_popup_background="@drawable/selector_spinner_item"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_elevation="2dp"
                android:background="@drawable/selector_spinner_normal"/>
            <TextView
                android:id="@+id/tv_content_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/spinner_campus"
                app:layout_constraintBottom_toBottomOf="@id/spinner_campus"
                app:layout_constraintStart_toEndOf="@id/spinner_campus"
                app:layout_constraintEnd_toStartOf="@id/tv_content_school"
                android:layout_marginStart="@dimen/layout_margin_xxsmall"
                android:paddingVertical="@dimen/layout_margin_xxsmall"
                android:hint="@string/title_date"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/black"
                android:drawableRight="@drawable/ic_vector_calendar"
                android:paddingRight="@dimen/layout_margin_xxsmall"
                android:focusable="true"
                android:background="@drawable/bg_edittext"
                android:stateListAnimator="@xml/animate_button_push"/>
            <kr.jeet.edu.manager.view.ClearableTextView
                android:id="@+id/tv_content_school"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/spinner_campus"
                app:layout_constraintBottom_toBottomOf="@id/spinner_campus"
                app:layout_constraintStart_toEndOf="@id/tv_content_date"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/layout_margin_xxsmall"
                android:paddingVertical="@dimen/layout_margin_xxsmall"
                android:hint="@string/hint_main_school"
                android:textSize="@dimen/font_size"
                android:gravity="center"
                android:textColor="@color/black"
                android:focusable="true"

                />
<!--            <androidx.constraintlayout.widget.Barrier-->
<!--                android:id="@+id/barrier_campus"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="0dp"-->
<!--                app:barrierDirection="start"-->
<!--                app:constraint_referenced_ids="tv_content_date,tv_content_school" />-->
            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_dept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/spinner_clst"
                app:layout_constraintTop_toBottomOf="@id/spinner_campus"
                app:layout_constraintBottom_toTopOf="@id/et_search"
                android:layout_marginTop="@dimen/layout_margin_xxsmall"
                android:layout_marginEnd="@dimen/layout_margin_xxsmall"
                android:paddingHorizontal="@dimen/layout_margin_xxsmall"
                android:paddingVertical="@dimen/layout_margin_xxsmall"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="@string/hint_select_department"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/darkgray"
                app:spinner_selected_item_background="@color/color_spinner_selected_item"
                app:spinner_divider_color="@color/line"
                app:spinner_divider_show="true"
                app:spinner_divider_size="@dimen/spinner_divider_height"
                app:spinner_popup_background="@drawable/selector_spinner_item"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_elevation="2dp"
                android:background="@drawable/selector_spinner_normal"/>
            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_clst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/spinner_dept"
                app:layout_constraintEnd_toStartOf="@id/spinner_cls"
                app:layout_constraintTop_toTopOf="@id/spinner_dept"
                app:layout_constraintBottom_toBottomOf="@id/spinner_dept"
                android:paddingHorizontal="@dimen/layout_margin_xxsmall"
                android:paddingVertical="@dimen/layout_margin_xxsmall"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="@string/hint_select_clst"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/darkgray"
                app:spinner_selected_item_background="@color/color_spinner_selected_item"
                app:spinner_divider_color="@color/line"
                app:spinner_divider_show="true"
                app:spinner_divider_size="@dimen/spinner_divider_height"
                app:spinner_popup_background="@drawable/selector_spinner_item"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_elevation="2dp"
                android:background="@drawable/selector_spinner_normal"/>
            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_cls"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/spinner_clst"
                app:layout_constraintEnd_toStartOf="@id/spinner_student_type"
                app:layout_constraintTop_toTopOf="@id/spinner_dept"
                app:layout_constraintBottom_toBottomOf="@id/spinner_dept"
                android:layout_marginStart="@dimen/layout_margin_xxsmall"
                android:paddingHorizontal="@dimen/layout_margin_xxsmall"
                android:paddingVertical="@dimen/layout_margin_xxsmall"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="@string/hint_select_class"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/darkgray"
                app:spinner_selected_item_background="@color/color_spinner_selected_item"
                app:spinner_divider_color="@color/line"
                app:spinner_divider_show="true"
                app:spinner_divider_size="@dimen/spinner_divider_height"
                app:spinner_popup_background="@drawable/selector_spinner_item"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_elevation="2dp"
                android:background="@drawable/selector_spinner_normal"
                android:visibility="visible"/>

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_student_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/spinner_cls"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/spinner_dept"
                app:layout_constraintBottom_toBottomOf="@id/spinner_dept"
                android:layout_marginStart="@dimen/layout_margin_xxsmall"
                android:paddingHorizontal="@dimen/layout_margin_xxsmall"
                android:paddingVertical="@dimen/layout_margin_xxsmall"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="@string/hint_select_student_type"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/darkgray"
                app:spinner_selected_item_background="@color/color_spinner_selected_item"
                app:spinner_divider_color="@color/line"
                app:spinner_divider_show="true"
                app:spinner_divider_size="@dimen/spinner_divider_height"
                app:spinner_popup_background="@drawable/selector_spinner_item"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_elevation="2dp"
                android:background="@drawable/selector_spinner_normal"/>
            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/spinner_dept"
                app:layout_constraintBottom_toTopOf="@id/layout_total_checkbox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/spinner_clst"
                android:layout_marginTop="@dimen/layout_margin_xxsmall"
                android:background="@drawable/bg_edittext"
                android:textSize="@dimen/font_size"
                android:maxLines="1"
                android:maxLength="1000"
                android:inputType="text"
                android:hint="@string/hint_search_name"
                android:textColor="@color/font_color_default"
                android:paddingHorizontal="@dimen/editbox_padding"
                android:paddingVertical="10dp"/>
            <android.widget.TextView
                android:id="@+id/tv_search_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/et_search"
                app:layout_constraintBottom_toBottomOf="@id/et_search"
                app:layout_constraintStart_toEndOf="@id/et_search"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableStart="@drawable/ic_vector_search"
                android:drawablePadding="@dimen/layout_margin_xxsmall"
                android:paddingHorizontal="@dimen/layout_margin_xxsmall"
                android:paddingVertical="@dimen/layout_margin_xxsmall"
                android:layout_marginStart="@dimen/layout_margin_xxsmall"
                android:text="@string/title_btn_search"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_small"
                android:gravity="center"
                android:background="@drawable/selector_bt_demand"
                android:clickable="true"
                android:stateListAnimator="@xml/animate_button_push"
                />
            <LinearLayout
                android:id="@+id/layout_total_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                android:orientation="horizontal"
                android:paddingTop="@dimen/layout_margin_xxsmall"
                android:paddingRight="@dimen/layout_margin_xsmall"
                android:gravity="center_vertical"
                android:stateListAnimator="@xml/animate_button_push">
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox_total"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="false"
                    android:clickable="false"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_all"
                    android:textSize="@dimen/font_size_xsmall"
                    android:textColor="@color/font_color_999"
                    android:layout_marginHorizontal="@dimen/layout_margin_xxxsmall"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_select_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/layout_total_checkbox"
                app:layout_constraintEnd_toStartOf="@id/layout_student_checkbox"
                app:layout_constraintTop_toBottomOf="@id/et_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:paddingTop="@dimen/layout_margin_xxsmall"
                android:hint="0 명 선택"
                android:textColor="@color/font_color_999"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/font_size_small"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/layout_student_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layout_parent_checkbox"
                android:orientation="horizontal"
                android:paddingTop="@dimen/layout_margin_xxsmall"
                android:gravity="center_vertical"
                android:stateListAnimator="@xml/animate_button_push"
                android:animateLayoutChanges="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/student"
                    android:textSize="@dimen/font_size_xsmall"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/font_color_default"
                    android:layout_marginHorizontal="@dimen/layout_margin_xxxsmall"
                    />
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox_student"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="false"
                    android:clickable="false"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_parent_checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline_v80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                android:orientation="horizontal"
                android:paddingTop="@dimen/layout_margin_xxsmall"
                android:gravity="center_vertical|right"
                android:stateListAnimator="@xml/animate_button_push"
                android:animateLayoutChanges="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/parents"
                    android:textSize="@dimen/font_size_xsmall"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/font_color_default"
                    android:layout_marginHorizontal="@dimen/layout_margin_xxxsmall"
                    />
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox_parent"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="false"
                    android:clickable="false"
                    />

            </LinearLayout>
<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0.5dp"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                android:background="@color/line"/>-->

            </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layout_spinner"
            app:layout_constraintBottom_toBottomOf="parent"
            android:animateLayoutChanges="true"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_recipient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/layout_recipient_list_item"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                android:scrollbars="vertical"
                />


        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <TextView
            android:id="@+id/tv_empty_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layout_spinner"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="@dimen/layout_margin_small"
            android:gravity="center"
            android:text="@string/empty_list_recipient"
            android:textSize="@dimen/font_size_xlarge"
            android:textColor="@color/font_color_999"
            android:lineSpacingMultiplier="@dimen/empty_textview_multiplier"
            android:elevation="@dimen/layout_margin_xxxsmall"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>