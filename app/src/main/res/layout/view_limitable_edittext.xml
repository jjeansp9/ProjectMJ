<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_edittext"
    android:id="@+id/root_view_limitable_edittext"
    >
    <EditText
        android:id="@+id/edittext_limitable_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text=""
        android:paddingHorizontal="@dimen/editbox_padding"
        android:paddingTop="@dimen/editbox_padding"
        android:inputType="textMultiLine|textNoSuggestions"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_count_limitable_edittext"/>
    <TextView
        android:id="@+id/tv_count_limitable_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_size_xsmall"
        android:textColor="@color/font_color_999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/layout_margin_xxsmall"
        android:layout_marginBottom="@dimen/layout_margin_xxxsmall"/>


</androidx.constraintlayout.widget.ConstraintLayout>