<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:paddingStart="@dimen/layout_margin_xxxsmall"
    android:paddingEnd="@dimen/layout_margin_small"
    android:paddingVertical="@dimen/layout_margin_xxxxsmall"
    android:id="@+id/attendance_item_root"
    android:foreground="?android:attr/selectableItemBackground">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_ve100"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="100dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_index"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/layout_index_width" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/layout_checkbox_width" />
    <TextView
        android:id="@+id/tv_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_index"
        app:layout_constraintHorizontal_bias="1"
        android:textColor="@color/font_color_999"
        android:hint="   "
        android:textStyle="bold"
        android:textSize="@dimen/font_size_xsmall"
        android:maxLines="1"
        android:ellipsize="end"/>
    <View
        android:id="@+id/view_gender"
        android:layout_height="@dimen/dot_sex_size"
        android:layout_width="@dimen/dot_sex_size"
        app:layout_constraintStart_toStartOf="@id/guideline_index"
        app:layout_constraintEnd_toStartOf="@id/guideline_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_attendance_note"
        android:layout_marginVertical="@dimen/layout_margin_small"
        android:background="@drawable/bg_circle_male"
        android:visibility="invisible"/>
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline_index"
        app:layout_constraintEnd_toStartOf="@id/guideline_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_attendance_note"
        android:checked="false"
        android:theme="@style/OriginCheckBox"
        />
    <TextView
        android:id="@+id/tv_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_attendance_note"
        app:layout_constraintStart_toStartOf="@id/guideline_title"
        app:layout_constraintEnd_toStartOf="@id/tv_birthday"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginHorizontal="@dimen/layout_margin_xxxsmall"
        android:layout_marginVertical="@dimen/layout_margin_xxxxsmall"
        android:textColor="@color/black"
        android:hint="@string/title_anonymous"
        android:textStyle="bold"
        android:textSize="@dimen/font_size"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/tv_birthday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_attendance_note"
        app:layout_constraintStart_toEndOf="@id/tv_student_name"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_bigo"
        android:layout_marginStart="@dimen/layout_margin_xxxsmall"
        android:textColor="@color/font_color_999"
        android:textSize="@dimen/font_size_small"
        android:hint="990707"
        android:layout_gravity="center_vertical"
        style="@style/AutoSizeTextAppearance"
        android:maxLines="1" />
    <ImageButton
        android:id="@+id/btn_edit_bigo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_attendance_note"
        app:layout_constraintEnd_toStartOf="@id/guideline_ve100"
        app:layout_constraintHorizontal_bias="1"
        android:background="@android:color/transparent"
        android:paddingStart="@dimen/layout_margin_xxsmall"
        android:paddingEnd="@dimen/layout_margin_xsmall"
        android:src="@drawable/ic_vector_edit"
        android:stateListAnimator="@xml/animate_button_push"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_attendance_status"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_attendance_note"
        app:layout_constraintStart_toEndOf="@id/guideline_ve100"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="@dimen/layout_margin_xxsmall"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="출석"
        android:textSize="@dimen/font_size_small"
        android:visibility="invisible"/>

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/spinner_attendance_status"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_attendance_note"
        app:layout_constraintStart_toEndOf="@id/guideline_ve100"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="@dimen/layout_margin_xxsmall"
        android:paddingVertical="@dimen/layout_margin_xxsmall"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_small"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:hint="출석"
        app:spinner_arrow_gravity="end"
        app:spinner_item_height="@dimen/spinner_item_height_small"
        app:spinner_arrow_tint="@color/darkgray"
        app:spinner_selected_item_background="@color/color_spinner_selected_item"
        app:spinner_divider_color="@color/line"
        app:spinner_divider_show="true"
        app:spinner_divider_size="@dimen/spinner_divider_height"
        app:spinner_popup_background="@drawable/selector_spinner_item"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_elevation="2dp"
        android:background="@drawable/selector_spinner_normal"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_note_end"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:barrierDirection="end"
        app:constraint_referenced_ids="tv_attendance_status,spinner_attendance_status" />

    <EditText
        android:id="@+id/edit_attendance_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_student_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_student_name"
        app:layout_constraintEnd_toEndOf="@id/barrier_note_end"
        android:background="@drawable/bg_edittext"
        android:hint="@string/message_note"
        android:textSize="@dimen/font_size"
        android:textColor="@color/font_color_default"
        android:paddingHorizontal="0dp"
        android:paddingVertical="@dimen/layout_margin_xxxxsmall"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:maxLength="500"
        />
</androidx.constraintlayout.widget.ConstraintLayout>