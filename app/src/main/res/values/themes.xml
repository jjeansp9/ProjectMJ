<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JeetEducation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <!--<item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_sub</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Hint Text Color -->
        <item name="android:textColorHint">@color/gray</item>
        <item name="toolbarStyle">@style/CustomToolbarStyle</item>
    </style>
    <style name="CustomToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbartitleTextAppearance</item>
    </style>

    <style name="ToolbartitleTextAppearance" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/font_color_default</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="OriginCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="colorControlActivated">@color/btn_stroke</item>
        <item name="colorSurface">@color/gray</item>
    </style>
    <style name="CalendarDateTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/font_color_default</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="CalendarHeaderTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/font_color_default</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

<!--    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">-->
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
<!--        <item name="android:navigationBarColor">@color/white</item>-->
<!--    </style>-->
    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />
</resources>